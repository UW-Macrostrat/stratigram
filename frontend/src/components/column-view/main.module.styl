@require './editor-styles'

*
  box-sizing border-box

body, html
  margin 0

.menu-column
  display flex
  flex-direction column
  margin-right 1em

.main-menu
  padding-top 2em
  top 0
  position sticky
  display flex
  flex-direction column
  button
    margin-bottom 0.2em

.column-container
  position relative

// Temporary, helps with dark reader on firefox.
@media (prefers-color-scheme: dark)
  .column-container img
      filter: invert(90%)

:global(.col-note-label)
  font-size 10px

.column-editor
  display: flex
  flex-direction row